<%= form_for(@post) do |f| %>
  <ul>
  <% @post.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title, "Insert fun title!" %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :story, "What's the story?" %><br />
    <%= f.text_area :story %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
